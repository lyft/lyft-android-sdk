            <corners android:radius="@dimen/button_corner_radius" />
            <solid android:color="@color/grey_6" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_radius" />
            <solid android:color="@color/grey_6" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_radius" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</selector>
